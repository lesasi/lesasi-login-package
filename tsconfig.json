{
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "removeComments": true,
        "noUnusedLocals": false,
        "esModuleInterop": true,
        "lib": [
            "es6",
            "es2015.promise",
            "dom"
        ]
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}